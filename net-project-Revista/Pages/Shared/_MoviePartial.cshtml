@model net_project_Revista.ViewModels.MovieVM
    <form asp-page="MovieDetails/moviedetails" method="get">
        <div class="card mb-4" style="width: 18rem; height: 610px;" >
            <img class="card-img-top" src="@Model.PosterPath" alt="Card image cap" />
            <div class="card-body text-center" style="height: 115px;">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.ReleaseDate</p>
                <br />
            </div>
            <div class="card-footer text-center">
                <button class="btn btn-info" type="submit">See More</button>
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.Title" name="title" />
        <input type="hidden" asp-for="@Model.PosterPath" name="posterPath" />
    </form>