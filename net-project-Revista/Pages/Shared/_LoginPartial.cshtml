@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" style="color: #cca372" class="nav-link nav-text" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" style="color: #cca372" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
         
        </li>
        <li class="nav-item">
            <a asp-page="/MovieFavourites/MovieFavourites" class="nav-link text-dark" id="favorite-icon"><i class="fas fa-heart fa-2x"></i>
            <span class="badge badge-secondary"></span>
            </a>
          
            
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" style="color: #cca372" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color: #cca372" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
