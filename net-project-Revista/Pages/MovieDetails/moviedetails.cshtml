@page
@model net_project_Revista.Pages.MovieDetails.moviedetailsModel

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@Model.PosterPath" alt="Card image cap" />
                </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="detailsheading">@Model.Movie.Title</div>
                    <br />
                    <br />
                    <div>Date Released: @Model.Movie.ReleaseDate</div>
                    <br />
                    <div class="detailsheading">Overview</div>
                    <br />
                    <p class="detailstext">@Model.Movie.Overview</p>
                </div>
                <br />
                <br />
                <br />
            </div>
        </div>
    </div>
