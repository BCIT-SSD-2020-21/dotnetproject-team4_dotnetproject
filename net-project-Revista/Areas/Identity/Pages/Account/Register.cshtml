@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


    <body>
        <div class="wrapper">
            <form class="form-signin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="form-signin-heading">Register</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="yourname@revista.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="yourname@revista.com" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" name="password" placeholder="Password" required="" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="btn btn-lg btn-danger btn-block" type="submit">Create Account</button>
            </form>
        </div>
    </body>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
