@page
@model LoginModel

<h1>@ViewData["Title"]</h1>
    <div class="wrapper">
        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Login</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-light btn-block">Log in</button>
            </div>
            <br />
            <button class="btn btn-lg btn-light btn-block" type="submit">Login With Google</button>
            <br />
            <div class="fb-login-button" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="true" data-use-continue-as="false" data-width="" onlogin="checkLoginState();"></div>
            <br />
            <br />
            <h3><span>OR</span></h3>
            <br />
            <button class="btn btn-lg btn-danger btn-block" type="submit">Register Now</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
